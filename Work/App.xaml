<Application x:Class="Work.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Work"
             StartupUri="MainWindow.xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="/Styles/AppColors.xaml"/>
                <ResourceDictionary Source="/Styles/SomeUIChange.xaml"/>
                <ResourceDictionary Source="/Styles/NoUpAndDownScroll.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <System:Double x:Key="NormalTextSize">18</System:Double>
            <System:Double x:Key="BigTextSize">21</System:Double>
        </ResourceDictionary>

    </Application.Resources>
</Application>
